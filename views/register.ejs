        </table>
        <br>
            <input type="submit" name="Signup" />
            <br> <br> <br>
            
            <p style="font-size: 15px ;text-decoration-color:red "><%= typeof message=='undefined'? " ":message%> </p>

            <a href="/login" style="font-size: 20px">login</a>
    </center>
    </form>
