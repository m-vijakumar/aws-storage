<body>
    <form method="POST" action="/auth/register">
        <center>
        <table >
            <tr><td> UserName: </td><td><input type="text" name="username"></td><td><p style="font-size: 15px ;text-decoration-color:red "><%= typeof usermessage=='undefined'? " ":usermessage%> </p></td></tr><br>
